    <input type="hidden" value="@Model" id="check"/>
    <script>
        $(document).ready(function () {
            var v = $('#check').val();
           // alert(v);
            if (v == "False") {
                alert("Item is not Added , Tittle Alrady exist");
            }
        });
    </script>
    <div class="span3">

    </div>
    <div class="well span9" >
        <h1>Admin Add Item View</h1>
       
         
         <form method="post" action="~/Admin/saveItem" enctype="multipart/form-data">  
        <table class="table">
            <tr>
                <td> Category</td>
                <td><select style="width:100%" name="catagory">
                <option> Mobile </option>
                <option> Camera </option>
                <option> Tablet </option>
                <option> Laptop </option>
                <option> Shirts </option>
                <option> Shoes </option>
                <option> Others </option>
            </select></td>
            </tr>
            <tr>
                <td> Tittle</td>
                <td> <input type="text" name="tittle" id="t1"/></td>
            </tr>
            <tr>
                <td> Company</td>
                <td> <input type="text" name="company" id="t2"/></td>
            </tr>
            <tr>
                <td>Sale Price</td>
                <td> <input type="text" name="price" id="t3"/></td>
            </tr>
            <tr>
                <td>Purchase Price</td>
                <td> <input type="text" name="purchase" id="t4"/></td>
            </tr>
            <tr>
                <td> Pictures</td>
                <td> <input type="File" class="btn btn-success" name="image" id="t5"/></td>
            </tr>
            <tr>
                <td> </td>
                <td> <input type="submit" value="Add Item" class="btn btn-success" onclick="return check(this)" /></td>
            </tr>
        </table>
             <div id="p1" style="color:red"></div>
         </form>
        <script>
            function check() {
             
                var name = document.getElementById('t1').value;
                var email = document.getElementById('t2').value;
                var password = document.getElementById('t3').value;
                var newPassword = document.getElementById('t4').value;
                var name1 = document.getElementById('t5').value;
                var err = document.getElementById('p1');
                var n = ~~Number(password);
                var n1 = ~~Number(newPassword);
                if (name.length == 0) {
                    err.innerText="*Tittle never be empty";
                    return false;
                }
                else if (email.length == 0) {
                  
                    err.innerText = "*Company name never be empty.";
                    return false;
                }
                else if (password.length == 0) {
                    err.innerText = "*sale price field never be empty.";
                    return false;
                }
                else if (newPassword.length == 0) {
                    err.innerText = "*Purchase price field never be empty.";
                    return false;
                }
                else if (name1.length == 0) {
                   
                    err.innerText = "*Picture field never be empty.";
                    return false;
                }
                else {
                    if (String(n) === password && n >= 0) {
                        if (String(n1) === newPassword && n1 >= 0) {
                            return true;
                        }
                        else
                        {
                            err.innerText = "* Purchase field must be integer";
                            return false;
                        }
                    }
                    else {
                        err.innerText = "* Price field must be integer";
                        return false;
                    }
                }
            }
            </script>
    </div>

   
  
   
