@{
    Layout = null;
    Layout = "Menu.cshtml";
}
@model List<EADWebProject.Models.Table>
    <div class="span3">

    </div>
    <div class="well span9" >
        <h1>Admin Panal: View Reports</h1>
        
 <table class="table table-striped"><tr><td>
      @using (Html.BeginForm("Clear", "Admin", FormMethod.Post))
        {
          <button class="btn-success" type="submit">Clear Reports</button>
      }
                                  </td></tr></table>  
<table class="table table-striped">
    <tr><th>Tittle</th><th>Sale Price</th><th>Purchase Price</th><th>Profit</th></tr>
    @{
        int totalSale = 0;
        int totalPurchase = 0;
        int totalProfit = 0;
    }
@if(Model != null){
foreach(var r in Model)
{
    <tr><td>@r.Tittle</td><td>@r.SalePrice</td><td>@r.Purchase</td><td>@r.Profit</td></tr>
   
        totalSale = totalSale + r.SalePrice;
        totalPurchase = totalPurchase + r.Purchase;
        totalProfit = totalProfit + r.Profit;
          
}}
</table>
        <table class="table table-striped">
            <tr><th>Total Sale</th><th>Total Purchase</th><th>Total Profit</th></tr>
            <tr><td>@totalSale</td><td>@totalPurchase</td><td>@totalProfit</td></tr>
            </table>
         </div>
